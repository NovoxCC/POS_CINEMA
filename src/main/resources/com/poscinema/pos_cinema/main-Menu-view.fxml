<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="mainMenu" minWidth="1000" minHeight="500" style="-fx-background-color: #0D0D0D;" stylesheets="@stylesheet-view.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.poscinema.pos_cinema.controllers.mainMenuController">
   <top>
      <ButtonBar fx:id="buttonBar" prefHeight="50.0" prefWidth="662.0" translateX="5.0" translateY="5.0" translateZ="10.0" BorderPane.alignment="BOTTOM_LEFT">
         <buttons>
            <MenuButton fx:id="reservationsButton" mnemonicParsing="false" prefHeight="200" prefWidth="100" styleClass="button" text="Reservations" textAlignment="CENTER" textFill="#d9d9d9" ButtonBar.buttonData="LEFT">
               <items>
                  <MenuItem mnemonicParsing="false" text="Create Reservation" />
                  <MenuItem mnemonicParsing="false" text="Delete Reservation" />
               </items>
            </MenuButton>
            <MenuButton fx:id="paymentsButton" mnemonicParsing="false" prefHeight="200" prefWidth="100" styleClass="button" text="Payments" textFill="#d9d9d9" ButtonBar.buttonData="LEFT">
               <items>
                  <MenuItem mnemonicParsing="false" text="Pay in Cash" />
                  <MenuItem mnemonicParsing="false" text="Pay with Card" />
               </items>
            </MenuButton>
            <MenuButton fx:id="cardsButton" mnemonicParsing="false" prefHeight="200" prefWidth="100" styleClass="button" text="Cards" textFill="#d9d9d9" ButtonBar.buttonData="LEFT">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#Onnewcard" text="New Card" />
                  <MenuItem mnemonicParsing="false" text="Reload Card" />
               </items>
            </MenuButton>
            <Button fx:id="viewSchedulesButton" mnemonicParsing="false" onAction="#OnviewSchedulesButton" prefHeight="200" prefWidth="100" styleClass="button" text="View Schedules" textFill="#d9d9d9" ButtonBar.buttonData="LEFT"> </Button>
            <Label fx:id="labelusername" alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="200" text="username" textFill="#d9d9d9">
               <font>
                  <Font size="25.0" />
               </font></Label>
            <ImageView disable="true" fitHeight="60.0" fitWidth="60.0" focusTraversable="true" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../../Images/userIcon.png" />
               <effect>
                  <ColorAdjust brightness="1.0" contrast="0.14" />
               </effect>
            </ImageView>
            <Button fx:id="singOffButton" maxWidth="50" minWidth="48.0" onAction="#OnsignOffButton" prefHeight="58.0">
               <graphic>
                  <ImageView fitHeight="42.0" fitWidth="56.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" smooth="false">
                     <image>
                        <Image url="@../../../Images/signoffIcon.png" />
                     </image>
                     <effect>
                        <ColorAdjust brightness="1.0" />
                     </effect>
                  </ImageView>
               </graphic>
               <font>
                  <Font />
               </font>
            </Button>
         </buttons>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </ButtonBar>
   </top>

   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>

   </center>
</BorderPane>
